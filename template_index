<?php  
if ($count > 0) { echo "<tr><th>Pavadinimas</th><th>Autorius</th><th>Data</th></tr>";      
echo "<tr>";  
while ($row = mysql_fetch_assoc($result)) {   
?>  
<td><a href='aprasas.php?knygos_id=<?php echo $row['id'];?>'>  
<?php    
echo $row['pavadinimas']."</td></a>";  
